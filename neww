<link name="laser_link">
  <visual>
    <geometry>
      <cylinder radius="0.02" length="0.05"/>
      <material><color rgba="0.8 0.8 0 1"/></material>
    </visual>
</link>

<joint name="laser_joint" type="fixed">
  <parent link="base_link"/>
  <child link="laser_link"/>
  <origin xyz="0 0 0.2" rpy="0 0 0"/>
</joint>

<sensor name="laser" type="lidar">
  <pose>0 0 0.2 0 0 0</pose>
  <lidar>
    <horizontal>
      <samples>360</samples>
      <resolution>1</resolution>
      <min_angle>-3.1415</min_angle>
      <max_angle>3.1415</max_angle>
    </horizontal>
    <range>
      <min>0.1</min>
      <max>10</max>
    </range>
  </lidar>
</sensor>
<gazebo>
  <sensor type="ray" name="lidar">
    <pose>0 0 0.15 0 0 0</pose> <!-- موقعه فوق الروبوت -->
    <ray>
      <scan>
        <horizontal>
          <samples>720</samples>
          <resolution>1</resolution>
          <min_angle>-1.5708</min_angle>
          <max_angle>1.5708</max_angle>
        </horizontal>
      </scan>
      <range>
        <min>0.1</min>
        <max>10.0</max>
      </range>
    </ray>
    <plugin name="gazebo_ros_laser" filename="libgazebo_ros_laser.so">
      <topicName>/scan</topicName>
      <frameName>lidar_link</frameName>
    </plugin>
  </sensor>
</gazebo>
import os
from launch import LaunchDescription
from launch.actions import ExecuteProcess
from launch_ros.actions import Node
from ament_index_python.packages import get_package_share_directory

def generate_launch_description():
    # مسار باكتجك
    pkg_share = get_package_share_directory('my_robot_pkg')
    urdf_file = os.path.join(pkg_share, 'urdf', 'my_robot.urdf')
    world_file = os.path.join(pkg_share, 'worlds', 'empty_world.sdf')

    # قراءة ملف الروبوت
    with open(urdf_file, 'r') as file:
        robot_desc = file.read()

    return LaunchDescription([
        # تشغيل Gazebo
        ExecuteProcess(
            cmd=['gz', 'sim', '-r', world_file],
            output='screen'
        ),

        # ناشر حالة الروبوت
        Node(
            package='robot_state_publisher',
            executable='robot_state_publisher',
            name='robot_state_publisher',
            parameters=[{
                'robot_description': robot_desc,
                'use_sim_time': True
            }]
        ),

        # اظهار الروبوت في المحاكاة
        Node(
            package='ros_gz_sim',
            executable='create',
            name='spawn_robot',
            arguments=[
                '-topic', '/robot_description',
                '-name', 'my_robot',
                '-z', '0.5'
            ]
        ),

        # جسر للتحكم في الحركة
        Node(
            package='ros_gz_bridge',
            executable='parameter_bridge',
            name='cmd_vel_bridge',
            arguments=['/cmd_vel@geometry_msgs/msg/Twist@gz.msgs.Twist']
        ),

        # جسر LiDAR من Gazebo إلى ROS2 (sensor_msgs/LaserScan)
        Node(
            package='ros_gz_bridge',
            executable='parameter_bridge',
            name='lidar_bridge',
            arguments=['/scan@sensor_msgs/msg/LaserScan@gz.msgs.LaserScan']
        ),
    ])

